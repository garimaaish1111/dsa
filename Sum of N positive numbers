//Sum of N positive numbers

public class RecursionSum {
    public static int sumOfN(int n) {
        if (n == 1) {
            return 1;
        }
        return n + sumOfN(n - 1);
    }

    public static void main(String[] args) {
        int n = 5;
        System.out.println("Sum of first " + n + " positive numbers: " + sumOfN(n));
    }
}
