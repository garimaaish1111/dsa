public class PowerOfTwoCheck {
    public static boolean isPowerOfTwo(int num) {
        if (num <= 0) {
            return false;
        }
        return (num & (num - 1)) == 0;
    }

    public static void main(String[] args) {
        int num = 16;
        System.out.println("Is " + num + " a power of 2? " + isPowerOfTwo(num));
    }
}
