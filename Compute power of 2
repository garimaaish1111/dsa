public class PowerOfTwo {
    public static int powerOfTwo(int n) {
        if (n == 0) {
            return 1;
        }
        return 2 * powerOfTwo(n - 1);
    }

    public static void main(String[] args) {
        int n = 5;
        System.out.println("2^" + n + " = " + powerOfTwo(n));
    }
}
